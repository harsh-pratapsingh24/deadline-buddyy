<%- include('partials/header') %> <%- include('partials/navbar', { page:
"profile", currentUser: currentUser }) %>

<!-- Main Content -->
<main class="main-content">
  <section class="section active">
    <div class="profile-header">
      <h2><i class="ph ph-user-circle"></i> My Profile</h2>
      <p>Manage your account information</p>
    </div>

    <div class="profile-container">
      <!-- Profile Card -->
      <div class="card profile-card">
        <div class="profile-basic">
          <div class="avatar-circle">
            <i class="ph ph-user"></i>
          </div>
          <div class="basic-info">
            <h3><%= currentUser?.email %></h3>
            <p class="sub-info">
              Member since <%= currentUser.createdAt ? new
              Date(currentUser.createdAt).toLocaleDateString("en-US", { month:
              "short", day: "numeric", year: "numeric" }) : "N/A" %>
            </p>
          </div>
        </div>
      </div>

      <!-- Account Info Card -->
      <div class="card info-card">
        <div class="card-header">
          <h3><i class="ph ph-identification-card"></i> Account Information</h3>
        </div>

        <form id="profileForm">
          <div class="info-grid">
            <div class="form-group">
              <label><i class="ph ph-envelope"></i> Email</label>
              <input type="email" value="<%= currentUser?.email %>" disabled />
            </div>

            <div class="form-group">
              <label><i class="ph ph-lock"></i> Password</label>
              <input type="password" value="********" disabled />
            </div>
          </div>

          <p class="coming-soon">More profile options coming soon...</p>
        </form>
      </div>
    </div>
  </section>
</main>

<script src="/js/profile.js"></script>
<%- include('partials/footer') %>

<style>
  /* Profile Page Fixes */

  .profile-container {
    max-width: 900px;
    margin: auto;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .profile-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .profile-header p {
    opacity: 0.7;
  }

  .card {
    background: rgba(255, 255, 255, 0.04);
    border-radius: 12px;
    padding: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .profile-basic {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .avatar-circle {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: rgba(0, 245, 212, 0.12);
    border: 2px solid rgba(0, 245, 212, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.2rem;
    color: #00f5d4;
  }

  .basic-info h3 {
    margin: 0;
    font-size: 1.3rem;
  }

  .sub-info {
    opacity: 0.6;
    margin-top: 4px;
  }

  .info-card .card-header h3 {
    margin-bottom: 1rem;
  }

  .info-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.4rem;
    opacity: 0.7;
  }

  .form-group input {
    width: 100%;
    padding: 0.8rem;
    border-radius: 8px;
    border: none;
    background: rgba(255, 255, 255, 0.05);
    color: #fff;
  }

  .coming-soon {
    opacity: 0.6;
    margin-top: 1rem;
    text-align: center;
  }
</style>
